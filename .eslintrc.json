{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "script"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "settings": {
      "import/extensions": [".js", ".ts"],
      "import/resolver": {
        "node": {
          "extensions": [".js", ".ts"]
        }
      }
    },
    "rules": {
      "linebreak-style": "off",
      "lines-between-class-members": "off",
      "import/extensions": ["error", "always", {
        "ts": "ignorePackages",
        "js": "ignorePackags"
      }],
      "import/no-extraneous-dependencies": ["error", {
        "devDependencies": true
      }]
    },
    "globals": {
      "NodeJS": true
    }
}
